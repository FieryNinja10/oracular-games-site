generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRESQL_DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  name     String   @db.VarChar(50)
  gamerTag String?  @default("Player") @db.VarChar(30)
  tag      String   @unique @db.VarChar(6)
  region   String?
  age      DateTime @db.Date
}
